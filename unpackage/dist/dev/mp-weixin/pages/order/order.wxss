.order .order-tab-page {
  width: 100%;
  position: relative;
}
.order .order-tab-page .lock-position {
  width: 20%;
  position: absolute;
  left: 0;
}
.order .order-tab-page .order-content {
  width: 80%;
  position: relative;
  left: 150rpx;
}
.order .order-tab-page .order-content .list-item {
  border: 5rpx solid #dddddd;
  border-radius: 10rpx;
  position: relative;
  margin: 0 15rpx;
  margin-bottom: 10rpx;
}
.order .order-tab-page .order-content .list-item .tag {
  position: absolute;
  right: 12rpx;
  bottom: 20rpx;
  font-size: 20rpx;
}
.order .order-tab-page .order-content .list-item .tag .icon-style {
  font-size: 80rpx;
  color: #d4237a;
}
.order .wrapper {
  width: 500rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin: 50%;
  transform: translateX(-50%);
}
.order .wrapper .contant {
  text-align: center;
  display: flex;
  flex-direction: column;
  padding: 50rpx;
  font-size: 40rpx;
}