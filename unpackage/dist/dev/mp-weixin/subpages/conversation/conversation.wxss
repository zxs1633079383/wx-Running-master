.talk {
  width: 100%;
  background-color: #f1f1f1;
}
.talk .talk-contant {
  overflow: scroll;
  background-color: #f1f1f1;
  font-size: 35rpx;
}
.talk .talk-contant .talk-contant-style {
  padding-top: 20rpx;
}
.talk .talk-contant .talk-contant-style .contant-value {
  text-align: left;
  padding: 20rpx;
  color: #555555;
}
.talk .talk-contant .talk-contant-left {
  display: flex;
  justify-content: flex-start;
  padding-left: 20rpx;
}
.talk .talk-contant .talk-contant-left .contant-value-l {
  background-color: skyblue;
  border-radius: 0 30rpx 30rpx 30rpx;
  margin-left: 10rpx;
}
.talk .talk-contant .talk-contant-right {
  display: flex;
  justify-content: flex-end;
  padding-right: 20rpx;
}
.talk .talk-contant .talk-contant-right .contant-value-r {
  background-color: lightgreen;
  border-radius: 30rpx 0 30rpx 30rpx;
  margin-right: 10rpx;
}
.talk .talk-contant .contant-value-image {
  margin: 0 10rpx;
}
.talk-bottom {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.talk-bottom input {
  width: 60%;
  border-bottom: 1px solid #ccc;
}
.show-image {
  margin-top: 50%;
}