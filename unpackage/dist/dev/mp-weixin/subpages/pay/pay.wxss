.pay {
  width: 100%;
  position: relative;
}
.pay .pay-top {
  margin-bottom: 40rpx;
}
.pay .pay-top .position-show {
  width: 90%;
  margin: 0 3%;
  padding: 15rpx;
  background-color: #e5e5e5;
}
.pay .pay-contant {
  margin: 20rpx;
}
.pay .pay-contant .pay-contant-window {
  border: 20rpx solid #aaff7f;
  border-top: 60rpx solid #aaff00;
  border-radius: 30rpx;
  position: relative;
}
.pay .pay-contant .pay-contant-window .pay-contant-window-storeName {
  position: absolute;
  top: -75rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx;
}
.pay .pay-contant .pay-contant-window .pay-contant-window-storeName .pay_icon {
  color: #000;
  position: relative;
  top: -25rpx;
  font-size: 90rpx;
  z-index: 1;
}
.pay .pay-contant .pay-contant-window .pay-contant-window-card .card-footer {
  font-size: 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.pay .pay-contant .pay-contant-window .pay-contant-window-card .card-footer text {
  padding: 10rpx;
  padding-top: 4rpx;
  background-color: #fff;
}
.pay .pay-contant .pay-contant-window .pay-contant-window-card .card-footer view {
  border: 1px solid #ccc;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 20rpx;
  background-color: #fff;
}
.pay .pay-contant .pay-contant-window .van-card {
  margin: 10rpx;
  border-radius: 30rpx;
  border: 5rpx solid #e5e5e5;
  margin-bottom: 5rpx;
}
.pay .pay-contant .stepping-stone {
  height: 150rpx;
}
.pay .pay-bottom {
  width: 100%;
  height: 160rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  background-color: #f0f0f0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}